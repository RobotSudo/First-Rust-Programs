fn main() {
    println!("Hello, world!");

    // VARIABLES
    // by default variables are immutable (unchanging)
    let x = 5;
    println!("The value of x is {x}");
    // x = 6; this will cause error

    // to make the variable mutable (cangible)
    let mut y = 6;
    println!("The value of y is {y}");
    y = 7;
    println!("The new value of y is {y}");

    // CONSTANTS
    // constants are always immutable and type of value must be annotated
    const THREE_HOURS_IN_SECONDS: u32 = 60 * 60 * 3;
    println!("There is {THREE_HOURS_IN_SECONDS} seconds in 3 hours");
}

